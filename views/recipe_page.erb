<h1>Here is your <%= @type_of_recipe %> recipe!<h1>

<%= @meal_info %>
<% if @photo %>
    <img src="<%= @photo %>" alt="Recipe Image">
<% end %>

<dl>
  <dt>Ingredients</dt>
    <% @ingredients.each do |ingredient| %>
      <dd><%= ingredient %></dd>
    <% end %>

  <dt>Instructions</dt>
  <dd><%= @instructions %></dd>
</dl>
